@model Hardware[]

@{
    ViewData["Title"] = "Search Result";
}

<h1>Search Result</h1>

@if (Model.Length == 0)
{
    <p>Nothing found</p>
}
else
{
    <ul>@foreach (var hardware in Model)
        {
            <li><a href="@Url.Action("Index", "Hardware", new {id = hardware.Id })">@hardware.Title</a></li>
        }
    </ul>
}